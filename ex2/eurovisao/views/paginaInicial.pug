extends layout

block content
  header
    h1.w3-blue.w3-center Lista de Edições

  table.w3-table-all
    thead
      tr
        th ID da Edição
        th Ano da Edição
        th País Organizador
        th País Vencedor
    tbody
      each edicao in edicoes
        tr
          td: a(href=`/${edicao._id}`) #{edicao._id}
          td #{edicao.anoEdição}
          td: a(href=`/paises/${encodeURIComponent(edicao.organizacao)}`) #{edicao.organizacao}
          td: a(href=`/paises/${encodeURIComponent(edicao.vencedor)}`) #{edicao.vencedor}

  footer.w3-container.w3-center.w3-margin-top.w3-blue
        p Generated in EW
